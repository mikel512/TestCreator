@model DataLibrary.Models.ClassModel
    <form asp-action="CreateClassAJAX" asp-controller="Instructor"
          data-ajax="true"
          data-ajax-method="POST"
          data-ajax-mode="replace"
          data-ajax-update="#ajaxresult">

        <div id="ajaxresult">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label for="name">Class Name</label>
                <input type="text" class="form-control" asp-for="className"
                       id="AjaxValidationModelName" aria-describedby="nameHelp"
                       placeholder="Enter class name">
                <span asp-validation-for="className" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="name">Class Subject</label>
                <input type="text" class="form-control" asp-for="classSubject"
                       id="AjaxValidationModelName" aria-describedby="nameHelp"
                       placeholder="Enter class subject">
                <span asp-validation-for="classSubject" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
